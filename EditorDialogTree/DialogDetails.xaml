<Window x:Class="EditorDialogTree.DialogDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EditorDialogTree"
        mc:Ignorable="d"
        Title="DialogDetails" x:ClassModifier="internal" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <local:BaseDialogView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <GridSplitter Grid.Column="1" ResizeDirection="Columns" />
        <local:ChoiceDialogView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Column="2" />
    </Grid>
</Window>